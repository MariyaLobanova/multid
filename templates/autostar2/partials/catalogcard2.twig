{#{ data['tv.car_photos'] }#}

{# Получаем случайное изображения (ссылку) из поля "Фотографии" (car_photos) #}
{% set randomPhotoLink = runSnippet('helpers', {jsonPhotos: data['tv.car_photos'],
    action:'randomPhoto'})
%}

{% set oldprice = runSnippet('helpers', {caroldprice: data['tv.car-price'],
    action:'caroldprice'}) %}

<div class="col-xl-4 col-md-6">
    <div class="item mb-4">
        <img src="{{ randomPhotoLink }}">
        <div class="p-sm-4 p-3">
            <div class="flex">
                <div class="name mb-3">
                    <span class="d-block mb-2">{{ data['title'] }}, {{ data['tv.year'] }}</span>
                    {{ data['tv.modification'] }} поколение
                </div>
                <div class="status mb-3">
                    <span class="d-inline-block py-1 px-2 color1">В наличии</span>
                </div>
            </div>
            <div class="data row">
                <div class="col-4">
                    <div class="data-item mb-3">
                        Пробег:
                        <span class="d-block mt-1">{{ ( data['tv.run'] )|number_format(0, '.', ' ') }}км</span>
                    </div>
                </div>
                <div class="col-4">
                    <div class="data-item mb-3">
                        КПП:
                        <span class="d-block mt-1">{{ (data['tv.gear']) }}</span>
                    </div>
                </div>
                <div class="col-4">
                    <div class="data-item mb-3">
                        Двигатель:
                        <span class="d-block mt-1">{{ (data['tv.engine_volume']) }} ({{ data['tv.engine_power'] }} л.с.)</span>
                    </div>
                </div>
            </div>
            <div class="prices row">
                <div class="col-6">
                    <div class="price-item mb-3">
                        <span class="old">{{ ( data['tv.old-car-price'] )|number_format(0, '.', ' ') }} ₽</span>
                        <div class="new mt-1">{{ ( data['tv.car-price'] )|number_format(0, '.', ' ') }} ₽</div>
                    </div>
                </div>
                <div class="col-6">
                    <div class="price-item mb-3">
                        В кредит:
                        <div class="new my-1 red">30 000 ₽</div>
                        ежемесячный платеж
                    </div>
                </div>
            </div>
            <div class="special mb-3 pl-4">
                Специальное предложение
            </div>
            <button class="b1 w-100 mb-2" data-fancybox data-src="#popup1"><span class="d-inline-block"></span> Проверить по автотеке</button>
            <div class="buttons row">
                <div class="col-5">
                    <button class="b2 w-100" onclick="location.href='{{ data['url'] }}';">Подробнее</button>
                </div>
                <div class="col-7">
                    <button class="b3 w-100" data-fancybox data-src="#popup3">Купить в кредит</button>
                </div>
            </div>
        </div>
    </div>
</div>
