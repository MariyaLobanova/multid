<script>
        $(function(){
            $('#select').change(function(){
              var colorSelection = $('#select').val();
              $('.js-'+colorSelection+'-btn').trigger('click');
            })
            $('a').on('click',function(){
              var sel = $(this).parent().parent('ul').data('sel'),
                  val = $(this).data('val');
