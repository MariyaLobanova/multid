                                                <table>
                                                    <tbody>
                                                    {% for item in column2 %}
                                                        <tr>
                                                            <td>{{ item['key'] }}</td>
                                                            {% if item['value'] == 1 %}
                                                                <td>Есть</td>
                                                            {% elseif item['value'] > 1 %}
                                                                <td>{{ item['value'] }} руб.</td>
                                                            {% else %}
