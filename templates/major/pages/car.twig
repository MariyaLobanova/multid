                                                        {% set column1 = column1|merge([{ 'key': key, 'value': value }]) %}
                                                    {% else %}
                                                        {% set column2 = column2|merge([{ 'key': key, 'value': value }]) %}
                                                    {% endif %}
                                                    {% set index = index + 1 %}
                                                {% endif %}
                                            {% endfor %}
                                        {% endfor %}
                                        <div class="row">
                                            <div class="col-md-6">
                                                <table>
                                                    <tbody>
                                                    {% for item in column1 %}
                                                        <tr>
                                                            <td>{{ item['key'] }}</td>
                                                            {% if item['value'] == 1 %}
                                                                <td>Есть</td>
                                                            {% elseif item['value'] > 1 %}
