                <img src="{{baseSettings["logo"]}}">
            {% else %}
            <div style="width: 200px;
                height: 48px;
                font-style: normal;
                font-weight: 400;
                font-size: 20px;
                line-height: 24px;
                display: flex;
                align-items: center;
                text-transform: uppercase;
                justify-content: center;
                color: #D12D1E;">{{ baseSettings.pagetitle }}
            </div>
            {% endif %}
        </a>
		</div>
		{{headermenu|raw}}
