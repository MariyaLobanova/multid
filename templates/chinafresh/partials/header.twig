			<button data-fancybox data-src="#popup" type="button">Заказать звонок</button>
			{{ runSnippet('formatPhone', {number: baseSettings["salon-phone"], format: '+7(xxx)xxx-xx-xx', link: '1'}) | raw}}
		</div>
		<a class="menu-button">
			<span></span>
			<span></span>
			<span></span>
		</a>
	</div>
