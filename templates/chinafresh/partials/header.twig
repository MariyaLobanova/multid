
{% set headermenu = runSnippet('DLMenu', {
parents: baseSettings["id"],
tvList: 'image',
maxDepth: 1,
rowTpl: '@CODE:
<li><a href="[+url+]">[+pagetitle+]</a></li>',
outerTpl: '@CODE:<ul>
    [+wrap+]</ul>'}) %}

<div class="menubg"></div>
<header class="header inner mb-5">
