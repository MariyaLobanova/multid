
{% extends 'app.twig' %}

{% block MAIN %}
	<hr class="m-0 d-xl-none"/>
	<div class="container">
		<nav aria-label="breadcrumb">
			<ol class="breadcrumb">
				<li class="breadcrumb-item">
					<a href="/">Главная</a>
				</li>
				<li class="breadcrumb-item active">Акции</li>
			</ol>
		</nav>
	</div>
	<hr class="m-0"/>
	<div class="container px-4 pt-5">
		<h4 class="fw-bold mb-5">Акции и скидки</h4>
		<div class="row mb-5">
			{% include 'partials/actions.twig' %}
		</div>
	</div>
	<div class="container px-4">
		<h4 class="fw-bold mb-5">Выгодные предложения</h4>
	</div>
	<div class="container mb-3 similar-cars">
		<div id="similar-cars" class="carousel carousel-dark" data-bs-interval="false">
			<div class="d-flex d-sm-block">
				<a class="carousel-control-prev d-sm-none position-relative" type="button" data-bs-target="#similar-cars" data-bs-slide="prev">
					<span class="carousel-control-prev-icon" aria-hidden="true"></span>
				</a>
				<div class="row px-0 pt-3 pb-5 carousel-inner w-auto m-0">
					{{  runSnippet('DocLister', 
                {display: 20, 
                  parents: 27, 
                  depth: 0, 
                  tvList:'car-price,old-car-price,car_photos,run,engine_power,gear', 
                  tpl:'@T_FILE:partials/catalogcard',
                  paginate:'pages',
                TplNextP:'',
                TplPrevP:'',
                TplPage:'@CODE: <li class="page-item"><a class="page-link" href="[+link+]">[+num+]</a></li>' ,
                TplCurrentPage:'@CODE: <li class="page-item active" aria-current="page">
                    <span class="page-link">[+num+]</span>
                </li>',
                TplWrapPaginate:'@CODE:     <ul class="pagination">
                    [+wrap+]</ul>',
                    filter: 'filters',

                filters: 'AND(tv:actions:!=:0)',
                filterRangeSeparator: ':',
                filterValuesSeparator: '|',
                filterDelimiter: '||',
                'filter_delimiter:containsAll': '~',
                filterPriceId: 19,
                filterList: 9,
                _filterList: '19:range;9:dropdown;134:range;135:range;136:range',
                filterCategory: 20,
                filterCounters: 1,
                filterUseParams: 1,
                filterTpl: '@T_FILE:partials/filters/tpl',
                filterOwnerRange: '@T_FILE:partials/filters/ownerRange',
                filterTplRange: '@T_FILE:partials/filters/tplRange',
                filterOwnerCheckbox: '@T_FILE:cpartials/filters/ownerCheckbox',
                filterTplCheckbox: '@T_FILE:partials/filters/tplCheckbox',
                filterOwnerRadio: '@T_FILE:partials/filters/ownerRadio',
                filterTplRadio: '@T_FILE:partials/filters/tplRadio'
                }) |raw}}
				</div>
				<a class="carousel-control-next d-sm-none position-relative" type="button" data-bs-target="#similar-cars" data-bs-slide="next">
					<span class="carousel-control-next-icon" aria-hidden="true"></span>
				</a>
			</div>
		</div>
	</div>

	<div
		class="container text-center mb-5 d-none d-sm-block">{# <button href="/" class="btn btn-outline-secondary btn-see-all">Смотреть все</button> #}
	</div>
	<div class="container py-5 mb-5 d-none d-sm-block">
		{{resource.content |raw }}
	</div>
{% endblock %}

