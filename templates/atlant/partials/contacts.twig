 <div class="container px-4 py-5 d-lg-none">
    <p>Офис {{baseSettings.pagetitle}}:</p>
    <p class="fw-bold">Санкт-Петербург, {{baseSettings.salon_location}}</p>
    <p>
        <a href="#" class="text-red" data-bs-toggle="modal" data-bs-target="#map">
            Смотреть на карте
        </a>
    </p>
</div>

<div class="modal fade" id="map" tabindex="-1" aria-labelledby="mapLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
        <div class="modal-content border-0">
            <div class="modal-header border-0">
                <h5 class="modal-title" id="mapLabel">Смотреть на карте</h5>
                <button
                    type="button"
                    class="btn-close"
                    data-bs-dismiss="modal"
                    aria-label="Close"
                ></button>
            </div>
            <div class="modal-body">
                <div style="position: relative; overflow: hidden">
                    {#{map|raw}#}
                </div>
            </div>
        </div>
    </div>
</div>

<div
    class="modal fade"
    id="feedback"
    tabindex="-1"
    aria-labelledby="feedbackLabel"
    aria-hidden="true"
>
    <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
        {{ runSnippet('Form', {
                            formid: 'FormCallback',
                            path: '/templates/atlant/partials/forms/feedback_modal/',
                            extension: 'twig'
                        })  | raw }} 
    </div>
</div>


<div class="modal fade" id="creditpopup" tabindex="-1" aria-labelledby="creditLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
