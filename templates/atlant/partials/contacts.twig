                <button
                    type="button"
                    class="btn-close"
                    data-bs-dismiss="modal"
                    aria-label="Close"
                ></button>
            </div>
            <div class="">
                <div style="position: relative; overflow: hidden; margin-top: -1.5rem;">

                {{ runSnippet('Form', {
                            formid: 'FormCredit',
                            path: '/templates/atlant/partials/forms/credit2/',
                            extension: 'twig'
                        })  | raw }}
                </div>
            </div>
        </div>
    </div>
</div>


