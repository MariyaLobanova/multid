{% set headermenu = runSnippet('DLMenu', {
    parents: baseSettings["id"],
    tvList: 'image',
    rowTpl: '@CODE:<li class="menu-item"><a href="[+url+]">[+pagetitle+]</a></li>',
    outerTpl: '@CODE:<ul class="menu-list">
        [+wrap+]</ul>'}) %}


        <header id="header" class="header">
            <div class="container">
                <div class="row align-items-center py-4">
                    <div class="col-auto d-xl-none">
                        <a href="#menu" data-bs-toggle="offcanvas" role="button">
                            <img src="/templates/atlant/images/menu.png" alt="menu" />
                        </a>
                    </div>
                    <div class="col-auto">
                        <a href="/">
                            {% if baseSettings["logo"] %}
                                <img src="{{ runSnippet('phpthumb', {input: baseSettings["logo"], options: 'w=120,h=50,far=C,bg=FFFFFF,f=png,q=1'}) }}">
                            {% else %}
                                <div style="width: 200px;
                height: 48px;
                font-style: normal;
                font-weight: 400;
                font-size: 20px;
                line-height: 24px;
                display: flex;
                align-items: center;
                text-transform: uppercase;
                justify-content: center;
                color: #D12D1E;">{{ baseSettings.pagetitle }}
                                </div>
                            {% endif %}
                        </a>
                    </div>
                    <div class="col row d-none d-xxl-flex">
                        <div class="col-auto p-0 px-2">
                            <img src="/templates/atlant/images/marker.png" alt="marker" />
                        </div>
                        <div class="col p-0 small fw-bold">
                            {{ baseSettings.salon_location }}
                        </div>
                    </div>
                    <div class="col d-none d-xl-block">
                      <form action="catalog" method="get"> <input
                            type="text"
                            class="form-control input-search"
                            name="input-search"
                            placeholder="Поиск по каталогу"
                        /></form>
                    </div>
                    <div class="col-auto px-4 row d-none d-xl-flex">
                        <div class="col-auto p-0 px-2">
                            <img src="/templates/atlant/images/worktime.png" alt="worktime" />
                        </div>
                        <div class="col p-0 small">
                            <p class="m-0">Пн-Вс: <b>09:00-21:00</b></p>
                            <!--<p class="m-0">Сб-вс: <b>11:00-17:00</b></p>-->
                        </div>
                    </div>
                    <div class="col row d-none d-xl-flex">
                        <div class="col-auto p-0 px-2">
                           <a href="#" data-bs-toggle="modal" data-bs-target="#feedback"> <img src="/templates/atlant/images/phone.png" alt="phone" data-bs-target="#feedback"/></a>
                        </div>
                        <div class="col p-0">
                            <p class="fw-bold fs-5 m-0">{{  runSnippet('formatPhone', {number: baseSettings["salon-phone"], format: '+7 (xxx) xxx-xx-xx', link: '1'}) | raw}}</p>
                            <p class="small m-0">Бесплатные звонки по России</p>
                        </div>
                    </div>
                    <div class="col-auto d-none d-xl-block">
                        <button data-bs-toggle="modal" data-bs-target="#feedback" class="btn btn-primary text-white fw-bold px-4 py-2">
                            Заказать звонок
                        </button>
                    </div>
                    <div class="col text-end d-xl-none">
                        <a href="#" data-bs-toggle="modal" data-bs-target="#feedback"> <img src="/templates/atlant/images/button-phone.png" alt="button-phone" /></a>
                    </div>
                </div>
            </div>
            <nav class="offcanvas offcanvas-start menu" tabindex="-1" id="menu">
                <div class="offcanvas-header flex-column align-items-start d-xl-none">
                    <p class="mb-1">
                        <button
                            type="button"
                            class="btn-close text-reset"
                            data-bs-dismiss="offcanvas"
                            aria-label="Close"
                        ></button>
                    </p>
                    <input type="text" class="form-control input-search" placeholder="Поиск по каталогу" />
                </div>
                <div class="container-lg offcanvas-body p-xl-0">
                   {{ headermenu|raw}}
                </div>
            </nav>
        </header>
