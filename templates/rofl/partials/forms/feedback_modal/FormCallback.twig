<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Закажите обратный звонок:</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div class="container">
          <div class="row">
            <div class="col-md-12">
              <form class="form">
                <input type="hidden" name="docid" value="{{ data.docid | default(resource.id) }}">
                <input type="hidden" name="price" value="{{ data.yourprice | default(resource[car-price]) }}" data-price>
                {{ data['form.messages'] | raw }}
                  <div class="form-group">
                      <label for="mobile_tel">Ваш телефон:</label>
                      <input type="tel" class="form-control phone-imask {{ data['mobile_tel.classname'] }} " type="tel" name="mobile_tel" id="formPhone" placeholder="+7 (___) ___-__-__" value="{{ data.mobile_tel }}">
                  </div>
                  <div class="form-group">
                      <label for="first_name">Ваше имя</label>
                      <input type="text" class="form-control {{ data['first_name.classname'] }}" id="formName" name="first_name" value="{{ data.first_name }}">
                  </div>
                  <div class="form-check">
                      <input class="form-check-input { data['check_nationality.classname'] }}" type="checkbox"  id="check_nationality" value="1" name="check_nationality" style="margin: 0;" required checked>
                      <label class="form-check-label small" for="check_nationality" style="margin-left: 20px;">
                          Являюсь гражданином РФ
                      </label>
                  </div>
                  <div class="modal-footer">
                      <button type="submit" class="btn btn-primary text-white text-nowrap w-100 m-3">Заказать звонок</button>
                  </div>
              </form>
            </div>
          </div>
        </div>
      </div>

    </div>
  </div>
</div>
<style>
    .form-check {
        position: relative;
        padding: 0;
        /* display: flex; */
        align-items: center;
    }
    .form-check-input {
        position: absolute;
        margin-top: 0.3rem;
        margin-left: -1.25rem;
    }
    .form-check input[type="checkbox"]{
        display: block!important;
    }

    .form .text-field-error{
      color: #FFF;
    }
</style>
