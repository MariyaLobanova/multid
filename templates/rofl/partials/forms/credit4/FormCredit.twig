<form> 
  <input type="hidden" name="docid" value="{{ data.docid | default(resource.id) }}">
  <input type="hidden" name="price" value="{{ data.yourprice | default(resource[car-price]) }}" data-price>
  {{ data['form.messages'] | raw }}
  <div class="container newform my-5">
    <div class="cred_newform container">
      <div class="img_container container">
        <img src="/templates/rofl/img/credit/girl.png" alt="" />
      </div>
      <div class="col-xl-6 col-md-12">
        <div class="field">
          <div class="d-flex justify-content-between">
            <span class="credit-title text-left pt-3">Одобряем <span style="color:#D12D1E;"> 98 %</span> кредитов</span>
          </div>
          <div class="d-flex justify-content-between">
            <span class="credit-cont text-left w-4 pt-4">Оставьте заявку чтобы</span>
          </div>
          <div class="d-flex justify-content-between">
            <span class="credit-cont text-left w-4 pt-2">зафиксировать Вашу ставку!</span>
          </div>
        </div>
      </div>
      <div class="application_cr row mt-3 ml-1">
        <div class="col-lg-4 col-md-4">
          <div class="field mb-4 pt-sm-0 pt-4 text-left">
            <label class="lab mb-2">Ваше имя</label>
            <input name="first_name" value="{{ data.first_name }}" type="text" class="form-control {{ data['first_name.classname'] }}" id="calc-input-5" type="text" placeholder="Иван" />
          </div>
        </div>
        <div class="col-lg-4 col-md-4">
          <div class="field mb-4 pt-sm-0 pt-4 text-left">
            <label class="lab mb-2">Ваш телефон</label>
            <input value="{{ data.mobile_tel }}" name="mobile_tel" class="form-control py-2 border-1 phone-imask {{ data['mobile_tel.classname'] }}" id="calc-input-6" type="text" placeholder="+7 (000) 000-00-00" />
          </div>
        </div>
        <div class="text-center pt-3 col-lg-4 col-md-4">
          <button type="submit" class="btn btn-danger w-100 mt-2 form-control" style="background: #D12D1E;border-radius: 8px;">Оставить заявку</button>
          <div class="form-check">
            <input class="form-check-input mt-1" type="checkbox"  id="check_nationality" value="1" name="check_nationality" style="margin: 0;">
            <label class="form-check-label small mt-1" for="check_nationality"style="font-size: 15px;">
              Являюсь гражданином РФ
            </label>
          </div>
        </div>
      </div>
    </div>  
  </div>

